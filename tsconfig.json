{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "app",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "compileOnSave": false,
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules"]
}
